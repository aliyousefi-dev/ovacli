{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Watch Docs (mdlook)",
			"type": "shell",
			"command": "powershell",
			"args": ["-Command", "cd ./ovacli-docs; mdlook watch ."],
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			}
		},
		{
			"label": "Build OvaCli (Go)",
			"type": "shell",
			"command": "go build -o ../builds/ovacli.exe",
			"options": {
				"cwd": "${workspaceFolder}/source"
			},
			"problemMatcher": ["$go"],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Generate gRPC Code (Go)",
			"type": "shell",
			"command": "protoc --go_out=. --go_opt=paths=source_relative --go-grpc_out=. --go-grpc_opt=paths=source_relative ovaproto.proto",
			"options": {
				"cwd": "${workspaceFolder}/ovaproto"
			},
			"problemMatcher": [],
			"group": "build"
		},
		{
			"label": "Copy ThirdParty to Build",
			"type": "shell",
			"windows": {
				"command": "powershell -Command \"Copy-Item -Path thirdparty\\* -Destination builds\\ -Recurse -Force\""
			},
			"linux": {
				"command": "cp -r thirdparty/. builds/"
			},
			"osx": {
				"command": "cp -r thirdparty/. builds/"
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": [],
			"group": "build",
			"presentation": {
				"reveal": "silent"
			}
		},
		{
			"label": "Serve Web (Angular)",
			"type": "shell",
			"command": "npm start",
			"options": {
				"cwd": "${workspaceFolder}/web"
			},
			"problemMatcher": [],
			"isBackground": true,
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared"
			},
			"group": {
				"kind": "test",
				"isDefault": true
			}
		},
		{
			"label": "Build Web (Angular)",
			"type": "shell",
			"command": "npm run build",
			"options": {
				"cwd": "${workspaceFolder}/web"
			},
			"problemMatcher": [],
			"group": "build"
		}
	]
}
